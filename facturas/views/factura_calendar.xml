<odoo>
    <data>
        <!-- Vista calendario para facturas -->
        <record id="view_mi_modulo_factura_calendario" model="ir.ui.view">
            <field name="name">mi_modulo.factura.calendario</field>
            <field name="model">mi_modulo.factura</field>
            <field name="arch" type="xml">
                <calendar string="Facturas" date_start="fecha_emision" date_stop="fecha_limite_pago">
                    <field name="name"/>
                    <field name="fecha_emision"/>
                    <field name="fecha_limite_pago"/>
                </calendar>
            </field>
        </record>
    </data>
</odoo>

